# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                                                   application.Controller.index
GET     /login                                                              auth.Controller.login
POST    /login                                                              auth.Controller.authenticate
POST    /logout                                                             auth.Controller.logout

GET     /ws application.Controller.socket

POST    /api/users             user.Controller.create
GET     /api/users/current     user.Controller.getCurrent

# Static Resources
GET     /assets/*file                                                       controllers.Assets.at(path="/public", file)

